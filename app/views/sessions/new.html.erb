<h1> Zaloguj sie </h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %> <br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %> <br>
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Zaloguj sie" %>
  </div>
<% end %>

<p>Nie masz jeszcze konta?<%= link_to "Zarejestruj sie!", signup_path %></p>
